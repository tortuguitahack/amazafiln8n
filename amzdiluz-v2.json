      },
      {
        "id": "redditModule",
        "type": "reddit:submitPost",
        "parameters": {
          "subreddit": "AmazonFinds",
          "title": "{{2.name}}",
          "content": "{{4.choices[0].message.content}}\nCompra aqu铆  {{3.text}}"
        }
      },
      {
        "id": "notionWebhook",
        "type": "webhook:sendData",
        "parameters": {
          "url": "https://hook.us1.make.com/jj4ekr2j7rsdp81tog2ps6gph1o7fk83",
          "payload": {
            "producto": "{{2.name}}",
            "mensaje": " 隆Clic detectado! Revisa en Amazon: {{3.text}}"
